---
import { ViewTransitions } from 'astro:transitions'
import { Header, Footer } from 'c/index'
import { getHeader, getFooter } from '../graphql'
import mainImg from 'imgs/mainImg.png'
import { SEOMetadata } from 'astro-seo-metadata'

interface Props {
	title?: string;
	description?: string
	image?: string 
}

const { title, description, image } = Astro.props
const infoHeader = await getHeader()
const infoFooter = await getFooter()
const url = Astro.url.href
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- Preload fonts -->
    <link rel="preload" href="/fonts/OktaNeue-Normal.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/fonts/OktaNeue-Light.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/fonts/OktaNeue-SemiBold.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/fonts/OktaNeue-Medium.ttf" as="font" type="font/ttf" crossorigin />
		<meta name="generator" content={Astro.generator} />
		<SEOMetadata
    siteName={title || 'Isa Web Page'}
    title={title || 'Isa Web Page'}
    description={description || 'Isa Web Page'}
    image={image || mainImg.src}
    favicon={'/favicon.svg'}
    copyright="ISC"
				author='Manuel Morales: https://github.com/Angstromico'
    canonicalUrl={url}
    type={'website'}
    astroGenerator={true}
  />
		<title>{title || 'Isa Web Page'}</title>
		<ViewTransitions />
	</head>
	<body>
		{infoHeader && <Header info={infoHeader} />}
		<slot />
		{infoFooter && <Footer info={infoFooter} />}
	</body>
</html>
